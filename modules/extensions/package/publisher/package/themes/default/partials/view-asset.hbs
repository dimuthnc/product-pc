{{#with assets}}
<div class="well asset-well">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-2 col-md-2 thumbnail-width-fixer">
                {{>asset-thumbnail .}}
            </div>
            <input type="hidden" id ="packageName" value="{{name}}">
            <input type="hidden" id ="packageVersion" value="{{version}}">
            <div class="col-lg-10 col-md-10">
                <h1 class="asset-name">{{name}}</h1>
                {{#if version}}
                    <h5 class="ast-ver ast-details">Version : {{version}}</h5>
                {{/if}}
                {{#if lifecycleState}}
                    <h5 class="ast-lc ast-details">{{lifecycle}} : {{lifecycleState}}</h5>
                {{/if}}
                {{#if createdDate}}
                <div class="well-description padding-bottom-lg">{{createdDate}}</div>
                {{/if}}
                <div id='tag-ui-container-view'>
                    {{> tag-ui-container-view ..}}
                </div>
                <div class="version-info-container padding-bottom-lg">
                    {{> asset-version-info ..}}
                </div>
            </div>
        </div>
    </div>
</div>


        {{#each tables}}
           {{#if_equal this.name "runtimeEnvironment"}}
            {{else}}
                {{renderTablePreview .}}
            {{/if_equal}}
        {{/each}}

        {{#if tags}}
            <a data-toggle="collapse" href="#collapseTags" class="collapsing-h2"><h2>Tags</h2></a>
            <div class="collapse" id="collapseTags">
            {{#each tags}}
                <span class="view-tag">{{this}}</span>
            {{/each}}
            </div>
        {{/if}}
        <div id="PackageZip">
            <input type="hidden" id ="packageFileName" value="{{packageFileName}}">
            <h2 class="field-title">
                <a data-toggle="collapse" href="#collapsePackageZip" aria-expanded="true" class="collapsing-h2">
                <i class="cu-btn-exp-col btn-collapsed">Package Zip</i>
                </a>
            </h2>
            <div class="collapse in" id="collapsePackageZip" aria-expanded="true">
                <div class="row padding-bottom-lg">
                    <div class="col-sm-2 custom-form-label text-right">Package Bar file:</div>
                    <div id="packageBar-value" class="col-sm-10">{{packageFileName}}  
                    <a id="a-download-package-zip" style="margin-right: 15px;">Download</a></div>
                </div>
            </div>
        </div>
{{/with}}
{{> sidebar-container . }}
